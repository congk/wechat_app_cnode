/*主题导航样式*/
.nav {
    position: fixed;
    height: 1.8rem;
    width: 100%;
    background-color: #f6f6f6;
    text-align: center;
    font-size: 1rem;
}
.nav-button{
    display: inline-block;
    margin: .2rem .3rem;
    padding: .2rem .4rem;
    text-align: center;
    color: #82bb23;
}
.nav-button-selected{
    display: inline-block;
    margin: .2rem .3rem;
    padding: .2rem .4rem;
    text-align: center;
    color: white;
    background-color: #82bb23;
    border-radius: .25rem; 
}

/*列表样式*/
.content{
    padding: 2rem 0;
}


/*页码样式*/
.pagination{
    position: fixed;
    bottom: 0;
    font-size: 1rem;
    height: 1.8rem;
    width: 100%;
    background-color: #f6f6f6;
    color: #919191;
    text-align: center;
}
.pagination view{
    display: inline-block;
    margin: .2rem 1.6rem;
    padding: .2rem 0;
}
